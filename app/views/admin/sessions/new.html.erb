<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold mb-6">Admin Login</h1>

  <%= form_with url: admin_login_path, method: :post, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :password, "Admin Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Enter admin password",
          autofocus: true %>
    </div>

    <div>
      <%= form.submit "Login",
          class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Back to Coffees", root_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
