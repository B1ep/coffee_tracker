<div class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold mb-6">Upload Coffee Image</h1>

  <% if @status %>
    <% if @status == :success %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        ✅ <%= @message %>
      </div>
      <div class="mt-4">
        <%= link_to "View Coffee", root_path, class: "text-blue-600 hover:underline" %>
      </div>
    <% elsif @status == :error %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        ❌ <%= @message %>
      </div>
    <% end %>
  <% end %>

  <% if @coffee %>
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-2"><%= @coffee.name %></h2>
      <p class="text-gray-600"><%= @coffee.roaster %></p>
    </div>

    <%= form_with url: admin_upload_image_path, method: :post, multipart: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :image, "Select Image File", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.file_field :image,
            accept: "image/*",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-sm text-gray-500 mt-1">Upload the coffee bag image from your local machine</p>
      </div>

      <div>
        <%= form.submit "Upload Image",
            class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "Back to Coffees", root_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
