<%= form_with(model: coffee, class: "space-y-6") do |form| %>
  <% if coffee.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
      <h2 class="font-bold mb-2"><%= pluralize(coffee.errors.count, "error") %> prohibited this coffee from being saved:</h2>
      <ul class="list-disc list-inside">
        <% coffee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent", placeholder: "e.g., Ethiopian Yirgacheffe" %>
    </div>

    <div>
      <%= form.label :roaster, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.text_field :roaster, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent", placeholder: "e.g., Blue Bottle Coffee" %>
    </div>

    <div>
      <%= form.label :origin, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.text_field :origin, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent", placeholder: "e.g., Ethiopia" %>
    </div>

    <div>
      <%= form.label :roast_level, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.select :roast_level, Coffee::ROAST_LEVELS, {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :date_tried, class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.date_field :date_tried, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :rating, "Rating (1-10)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= form.number_field :rating, in: 1..10, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
    </div>
  </div>

  <div>
    <%= form.label :website_url, "Website URL", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.url_field :website_url, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent", placeholder: "https://..." %>
  </div>

  <div>
    <%= form.label :tasting_notes, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_area :tasting_notes, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent", placeholder: "Describe the flavor profile, aroma, body, etc." %>
  </div>

  <div>
    <%= form.label :image, "Upload Image", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.file_field :image, accept: "image/*", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
    <% if coffee.image.attached? %>
      <div class="mt-4">
        <%= image_tag coffee.image, class: "h-40 object-cover rounded-lg" %>
      </div>
    <% end %>
  </div>

  <div class="flex gap-4">
    <%= form.submit class: "flex-1 bg-amber-600 hover:bg-amber-700 text-white py-3 rounded-lg font-semibold cursor-pointer transition-colors" %>
    <%= link_to "Cancel", coffees_path, class: "flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 text-center py-3 rounded-lg font-semibold transition-colors" %>
  </div>
<% end %>
