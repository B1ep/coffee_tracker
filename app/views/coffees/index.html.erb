<div class="bg-gradient-to-br from-amber-50 to-orange-100 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="bg-white rounded-2xl shadow-xl p-6 mb-6">
      <div class="flex items-center justify-between">
        <h1 class="text-4xl font-bold text-gray-800 flex items-center gap-3">
          ‚òï My Coffee Journal
        </h1>
        <%= link_to "Add Coffee", new_coffee_path, class: "bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors" %>
      </div>
    </div>

    <!-- Coffee Gallery -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @coffees.each do |coffee| %>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-transform hover:scale-105">
          <% if coffee.image.attached? %>
            <%= image_tag coffee.image, class: "w-full h-48 object-cover" %>
          <% else %>
            <div class="w-full h-48 bg-gradient-to-br from-amber-200 to-orange-300 flex items-center justify-center">
              <span class="text-6xl">‚òï</span>
            </div>
          <% end %>
          
          <div class="p-5">
            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= coffee.name %></h3>
            <p class="text-gray-600 font-semibold mb-3"><%= coffee.roaster %></p>
            
            <div class="flex items-center gap-2 mb-3">
              <span class="text-amber-500">‚≠ê</span>
              <span class="font-bold text-lg"><%= coffee.rating %>/10</span>
            </div>
            
            <% if coffee.origin.present? %>
              <div class="flex items-center gap-2 text-gray-600 text-sm mb-3">
                <span>üìç</span>
                <span><%= coffee.origin %></span>
              </div>
            <% end %>
            
            <div class="flex gap-2">
              <%= link_to "View", coffee_path(coffee), class: "flex-1 bg-amber-600 hover:bg-amber-700 text-white text-center py-2 rounded-lg font-semibold transition-colors" %>
              <%= link_to "Edit", edit_coffee_path(coffee), class: "flex-1 bg-gray-600 hover:bg-gray-700 text-white text-center py-2 rounded-lg font-semibold transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @coffees.empty? %>
      <div class="text-center py-20">
        <div class="text-8xl mb-4">‚òï</div>
        <h3 class="text-2xl font-bold text-gray-600 mb-2">No coffees yet</h3>
        <p class="text-gray-500 mb-4">Start tracking your coffee journey!</p>
        <%= link_to "Add Your First Coffee", new_coffee_path, class: "bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold inline-block transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
