<div style="margin: 0; padding: 0; min-height: 100vh;">
  
  <!-- Brown Header -->
  <div style="background-color: #8b6f47; width: 100%; padding: 48px 24px;">
    <div style="max-width: 1200px; margin: 0 auto; text-align: center;">
      <h1 style="color: #f5f1e8; font-family: Helvetica, Arial, sans-serif; font-size: 56px; font-weight: 700; margin: 0;">
        Edit Coffee
      </h1>
    </div>
  </div>

  <!-- Light Green Content -->
  <div style="background-color: #a8c5a0; width: 100%; padding: 48px 24px; min-height: 100vh;">
    <div style="max-width: 900px; margin: 0 auto;">
      <%= link_to coffee_path(@coffee), style: "display: inline-flex; align-items: center; gap: 8px; color: #2d4a3e; font-family: Helvetica, Arial, sans-serif; font-weight: 400; text-decoration: none; margin-bottom: 24px;" do %>
        <span>‚Üê</span>
        <span>Back to Coffee</span>
      <% end %>
      
      <div style="background-color: #f5f1e8; border-radius: 16px; padding: 48px; box-shadow: 0 10px 15px rgba(0,0,0,0.1);">
        <%= render "form", coffee: @coffee %>
      </div>
    </div>
  </div>

</div>
