<div class="bg-gradient-to-br from-amber-50 to-orange-100 min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <% if @coffee.image.attached? %>
        <%= image_tag @coffee.image, class: "w-full h-96 object-cover" %>
      <% else %>
        <div class="w-full h-96 bg-gradient-to-br from-amber-200 to-orange-300 flex items-center justify-center">
          <span class="text-9xl">‚òï</span>
        </div>
      <% end %>
      
      <div class="p-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2"><%= @coffee.name %></h1>
        <p class="text-2xl text-gray-600 font-semibold mb-6"><%= @coffee.roaster %></p>
        
        <div class="grid grid-cols-2 gap-6 mb-6">
          <div>
            <p class="text-sm text-gray-500 font-semibold mb-1">Rating</p>
            <div class="flex items-center gap-2">
              <span class="text-amber-500 text-2xl">‚≠ê</span>
              <span class="text-3xl font-bold"><%= @coffee.rating %>/10</span>
            </div>
          </div>
          
          <div>
            <p class="text-sm text-gray-500 font-semibold mb-1">Roast Level</p>
            <p class="text-xl font-semibold capitalize"><%= @coffee.roast_level %></p>
          </div>
          
          <% if @coffee.origin.present? %>
            <div>
              <p class="text-sm text-gray-500 font-semibold mb-1">Origin</p>
              <div class="flex items-center gap-2">
                <span>üìç</span>
                <span class="text-xl font-semibold"><%= @coffee.origin %></span>
              </div>
            </div>
          <% end %>
          
          <% if @coffee.date_tried.present? %>
            <div>
              <p class="text-sm text-gray-500 font-semibold mb-1">Date Tried</p>
              <div class="flex items-center gap-2">
                <span>üìÖ</span>
                <span class="text-xl font-semibold"><%= @coffee.date_tried.strftime("%B %d, %Y") %></span>
              </div>
            </div>
          <% end %>
        </div>

        <% if @coffee.tasting_notes.present? %>
          <div class="mb-6">
            <h3 class="text-xl font-bold text-gray-800 mb-2">Tasting Notes</h3>
            <p class="text-gray-700 leading-relaxed"><%= @coffee.tasting_notes %></p>
          </div>
        <% end %>

        <div class="flex gap-4">
          <% if @coffee.website_url.present? %>
            <%= link_to @coffee.website_url, target: "_blank", rel: "noopener", class: "bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors" do %>
              üîó Visit Website
            <% end %>
          <% end %>
          
          <%= link_to "Edit", edit_coffee_path(@coffee), class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors" %>
          <%= link_to "Back", coffees_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors" %>
        </div>

        <div class="mt-6">
          <%= button_to "Delete", coffee_path(@coffee), method: :delete, data: { confirm: "Are you sure you want to delete this coffee?" }, class: "w-full bg-red-500 hover:bg-red-600 text-white py-3 rounded-lg font-semibold transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>
